// Senior Dashboard Component (56+)
function SeniorDashboard({ profile, calculation }: { profile: UserProfile; calculation: TaxCalculation }) {
  return (
    <div className="space-y-6">
      <Card className="bg-gradient-to-r from-emerald-600 to-green-600 text-white">
        <CardContent className="p-8 text-center">
          <h2 className="text-3xl font-bold mb-2">æ‚¨çš„é€€ä¼‘ç¨åŠ¡ä¸­å¿ƒ</h2>
