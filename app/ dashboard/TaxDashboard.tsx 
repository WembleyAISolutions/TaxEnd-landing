// TaxDashboard.tsx
'use client';

import React, { useState, useEffect, useMemo } from 'react';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { Progress } from '@/components/ui/progress';
import { Alert, AlertDescription } from '@/components/ui/alert';
import { 
  DollarSign, 
  TrendingUp, 
  Calculator,
  Target,
  User,
  Shield,
  Sparkles,
  ChevronRight,
  Home,
  FileText,
  PiggyBank,
  GraduationCap,
  Briefcase,
  Building,
  Sunrise
} from 'lucide-react';

// Tax brackets for Australia 2024-25
const TAX_BRACKETS = [
  { min: 0, max: 18200, rate: 0, tax: 0 },
  { min: 18201, max: 45000, rate: 0.19, tax: 0 },
  { min: 45001, max: 120000, rate: 0.325, tax: 5092 },
  { min: 120001, max: 180000, rate: 0.37, tax: 29467 },
  { min: 180001, max: null, rate: 0.45, tax: 51667 }
];

interface UserProfile {
  age: number;
  income: number;
  occupation: string;
  hasHECS: boolean;
  hasPrivateHealth: boolean;
  workFromHome: boolean;
  hasInvestmentProperty: boolean;
}

interface TaxCalculation {
  taxableIncome: number;
  tax: number;
  afterTax: number;
  effectiveRate: number;
  marginalRate: number;
  bracketName: string;
  medicareLevyy: number;
  totalDeductions: number;
}

export default function TaxDashboard() {
  const [userProfile, setUserProfile] = useState<UserProfile>({
    age: 28,
    income: 75000,
    occupation: 'office_worker',
    hasHECS: true,
    hasPrivateHealth: false,
    workFromHome: true,
    hasInvestmentProperty: false
  });

  const [selectedAgeGroup, setSelectedAgeGroup] = useState<string>('young');

  // Determine age group
  useEffect(() => {
    if (userProfile.age <= 25) setSelectedAgeGroup('genz');
    else if (userProfile.age <= 35) setSelectedAgeGroup('millennial');
    else if (userProfile.age <= 45) setSelectedAgeGroup('genx');
    else if (userProfile.age <= 55) setSelectedAgeGroup('boomer');
    else setSelectedAgeGroup('senior');
  }, [userProfile.age]);

  // Calculate tax
  const calculateTax = (income: number): number => {
    const bracket = TAX_BRACKETS.find(b => 
      income >= b.min && (b.max === null || income <= b.max)
    );
    
    if (!bracket || bracket.rate === 0) return 0;
    
    return bracket.tax + (income - bracket.min + 1) * bracket.rate;
  };

  // Calculate complete tax position
  const taxCalculation = useMemo((): TaxCalculation => {
    let deductions = 0;
    
    // Work from home deduction
    if (userProfile.workFromHome) {
      deductions += 1000; // Simplified $1000 WFH deduction
    }
    
    // Professional expenses
    deductions += 500; // Basic professional expenses
    
    const taxableIncome = Math.max(0, userProfile.income - deductions);
    const tax = calculateTax(taxableIncome);
    
    // Medicare levy (2%)
    const medicareLevy = taxableIncome > 29207 ? taxableIncome * 0.02 : 0;
    
    // HECS repayment
    let hecsRepayment = 0;
    if (userProfile.hasHECS) {
      if (taxableIncome > 51550) {
        hecsRepayment = taxableIncome * 0.01; // Simplified HECS calculation
      }
    }
    
    const totalTax = tax + medicareLevy + hecsRepayment;
    const afterTax = userProfile.income - totalTax;
    const effectiveRate = (totalTax / userProfile.income) * 100;
    
    const bracket = TAX_BRACKETS.find(b => 
      taxableIncome >= b.min && (b.max === null || taxableIncome <= b.max)
    );
    
    return {
      taxableIncome,
      tax: totalTax,
      afterTax,
      effectiveRate,
      marginalRate: (bracket?.rate || 0) * 100,
      bracketName: `${((bracket?.rate || 0) * 100).toFixed(0)}% bracket`,
      medicareLevyy: medicareLevy,
      totalDeductions: deductions
    };
  }, [userProfile]);

  // Age group specific content
  const renderAgeSpecificDashboard = () => {
    switch(selectedAgeGroup) {
      case 'genz':
        return <GenZDashboard profile={userProfile} calculation={taxCalculation} />;
      case 'millennial':
        return <MillennialDashboard profile={userProfile} calculation={taxCalculation} />;
      case 'genx':
        return <GenXDashboard profile={userProfile} calculation={taxCalculation} />;
      case 'boomer':
        return <BoomerDashboard profile={userProfile} calculation={taxCalculation} />;
      case 'senior':
        return <SeniorDashboard profile={userProfile} calculation={taxCalculation} />;
      default:
        return <MillennialDashboard profile={userProfile} calculation={taxCalculation} />;
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 p-4">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-2">
            TaxEnd.ai
          </h1>
          <p className="text-gray-600">让税务变得简单 - 为每个人设计</p>
        </div>

        {/* Quick Profile Setup */}
        <Card className="mb-8">
          <CardHeader>
            <CardTitle>快速设置</CardTitle>
            <CardDescription>告诉我们一些基本信息，获得个性化建议</CardDescription>
          </CardHeader>
          <CardContent>
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div>
                <Label>年龄</Label>
                <Input 
                  type="number" 
                  value={userProfile.age}
                  onChange={(e) => setUserProfile({...userProfile, age: parseInt(e.target.value)})}
                />
              </div>
              <div>
                <Label>年收入</Label>
                <Input 
                  type="number" 
                  value={userProfile.income}
                  onChange={(e) => setUserProfile({...userProfile, income: parseInt(e.target.value)})}
                />
              </div>
              <div>
                <Label>职业类型</Label>
                <select 
                  className="w-full p-2 border rounded"
                  value={userProfile.occupation}
                  onChange={(e) => setUserProfile({...userProfile, occupation: e.target.value})}
                >
                  <option value="office_worker">办公室职员</option>
                  <option value="tradesperson">技工</option>
                  <option value="healthcare">医护人员</option>
                  <option value="teacher">教师</option>
                  <option value="it">IT专业人士</option>
                </select>
              </div>
              <div className="flex items-end">
                <Button className="w-full">
                  <Calculator className="mr-2 h-4 w-4" />
                  立即计算
                </Button>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Main Dashboard */}
        {renderAgeSpecificDashboard()}
      </div>
    </div>
  );
}

// Gen Z Dashboard Component (18-25)
function GenZDashboard({ profile, calculation }: { profile: UserProfile; calculation: TaxCalculation }) {
  return (
    <div className="space-y-6">
      {/* Fun Welcome Card */}
      <Card className="bg-gradient-to-r from-pink-500 to-yellow-500 text-white">
        <CardContent className="p-8 text-center">
          <div className="text-6xl mb-4">🎉</div>
          <h2 className="text-3xl font-bold mb-2">欢迎来到税务世界！</h2>
          <p className="text-xl opacity-90">让报税像刷抖音一样简单</p>
        </CardContent>
      </Card>

      {/* Quick Stats */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
        <Card>
          <CardContent className="p-6">
            <div className="flex items-center justify-between">
              <div>
                <p className="text-sm text-gray-600">你能退回</p>
                <p className="text-3xl font-bold text-green-600">
                  ${Math.max(0, calculation.totalDeductions * 0.19).toFixed(0)}
                </p>
              </div>
              <div className="text-4xl">💰</div>
            </div>
          </CardContent>
        </Card>

        <Card>
